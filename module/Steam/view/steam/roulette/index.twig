{%  if game %}
    <h1>{{ game.name }}</h1>
    <img src="http://media.steampowered.com/steamcommunity/public/images/apps/{{ game.appid }}/{{ game.img_logo_url }}.jpg" width="368" height="138" />

{% else %}

    <h1>Steam Roulette (Family Sharing Edition)</h1>
    <form method="get" action="/" id="urls">
        <div id="inputs">
        <input type="text" name="url[]" placeholder="Enter Steam URL"/>
        </div>
        <input type="submit" />
    </form>

    <script>
        function setupFields() {
            var input = $('#urls :text:last');

            $(input).keydown(function(event) {
                if (this.value) {
                    $('#inputs').append('<br /><input type="text" name="url[]" placeholder="Enter Steam URL"/>');
                    $(this).off();

                    setupFields();
                }
            })

        }

        $(document).ready(setupFields());

        $(document).ready(function() {
            $('#urls').submit(function() {
                $(this).find('input:text').filter(function() { return this.value == ""; }).remove();

            })
        })
    </script>

{% endif %}
